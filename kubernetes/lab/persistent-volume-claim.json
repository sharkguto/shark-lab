{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "uploads-pvc"
    },
    "spec": {
        "storageClassName": "default",
        "resources": {
            "requests": {
                "storage": "1Gi"
            }
        },
        "accessModes": [
            "ReadWriteOnce"
        ]
    }
}