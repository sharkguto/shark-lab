{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "mongodb",
        "labels": {
            "version": "v1",
            "app": "mongodb"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "mongodb",
                "image": "mongo:3.5",
                "ports": [
                    {
                        "containerPort": 27017
                    }
                ]
            }
        ]
    }
}